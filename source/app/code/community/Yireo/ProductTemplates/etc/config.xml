<config>

    <modules>
        <Yireo_ProductTemplates>
            <version>0.3.0</version>
        </Yireo_ProductTemplates>
    </modules>

    <global>
        <blocks>
            <producttemplates>
                <class>Yireo_ProductTemplates_Block</class>
            </producttemplates>
        </blocks>

        <helpers>
            <producttemplates>
                <class>Yireo_ProductTemplates_Helper</class>
            </producttemplates>
        </helpers>

        <models>
            <producttemplates>
                <class>Yireo_ProductTemplates_Model</class>
            </producttemplates>
        </models>
	</global>

    <adminhtml>
        <layout>
            <updates>
                <emailtester>
                    <file>producttemplates.xml</file>
                </emailtester>
            </updates>
        </layout>

        <translate>
            <modules>
                <Yireo_ProductTemplates>
                    <files>
                        <default>Yireo_ProductTemplates.csv</default>
                    </files>
                </Yireo_ProductTemplates>
            </modules>
        </translate>

        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <producttemplates>
                                            <title>Yireo_ProductTemplates Settings</title>
                                        </producttemplates>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>

        <events>
            <catalog_product_save_before>
                <observers>
                    <producttemplates_parse_products>
                        <type>singleton</type>
                        <class>Yireo_ProductTemplates_Observer_ProductParser</class>
                        <method>catalogProductSaveBefore</method>
                    </producttemplates_parse_products>
                </observers>
            </catalog_product_save_before>
            <catalog_product_new_action>
                <observers>
                    <producttemplates_parse_products>
                        <type>singleton</type>
                        <class>Yireo_ProductTemplates_Observer_ProductParser</class>
                        <method>catalogProductNewAction</method>
                    </producttemplates_parse_products>
                </observers>
            </catalog_product_new_action>
            <controller_action_predispatch>
                <observers>
                    <producttemplates_feed>
                        <type>singleton</type>
                        <class>Yireo_ProductTemplates_Observer_Feed</class>
                        <method>controllerActionPredispatch</method>
                    </producttemplates_feed>
                </observers>
            </controller_action_predispatch>
        </events>
    </adminhtml>
</config>
